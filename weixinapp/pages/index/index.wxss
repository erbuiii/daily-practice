/**index.wxss**/
.test-btn {
  width: 38%;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 33.3rpx;
  border-radius: 47.5px;
  display: flex;
  justify-content: center;
}
.test-btn::after {
  border: 0;
}

/*弹窗*/
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9000;
}

.modalDlg {
  width: 66%;
  height: 60%;
  position: fixed;
  z-index: 9999;  
  margin: 25% 17%;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

/* 返回按钮 */
.back-btn {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #00cdcd;
  border-radius: 0;  
}
/* 去掉按钮默认样式 */
.back-btn::after {
  border: 0;
  border-radius: 0;
}
/*滚动  */
.scroll-y {
  height: 100%;
  overflow: hidden; 
}

.test-list {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  border-bottom: 0.6rpx solid;
  border-bottom-color: #d0d0d0;
}

.test-title {
  margin-left: 36rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
